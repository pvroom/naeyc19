<ion-header>
	<ion-toolbar>
		<ion-title>Password Change</ion-title>
	</ion-toolbar>
</ion-header>

  <ion-content class="ion-padding">

	<ion-item>
		<ion-label floating>Old Password</ion-label>
		<ion-input class="InputBoxW" [type]="passwordType" placeholder="" (input)='passwordOld = $event.target.value' name="passwordOld" [value]="passwordOld" id="passwordOld"></ion-input>
		<ion-icon item-end [name]="passwordIcon" class="passwordIcon" (click)='hideShowPassword()'></ion-icon>
	</ion-item>

	<ion-item>
		<ion-label floating>New Password</ion-label>
		<ion-input class="InputBoxW" [type]="passwordType" placeholder="" (input)='passwordNew1 = $event.target.value' name="passwordNew1" [value]="passwordNew1" id="passwordNew1"></ion-input>
		<ion-icon item-end [name]="passwordIcon" class="passwordIcon" (click)='hideShowPassword()'></ion-icon>
	</ion-item>

	<ion-item>
		<ion-label floating>Re-type New Password</ion-label>
		<ion-input class="InputBoxW" [type]="passwordType" placeholder="" (input)='passwordNew2 = $event.target.value' name="passwordNew2" [value]="passwordNew2" id="passwordNew2"></ion-input>
		<ion-icon item-end [name]="passwordIcon" class="passwordIcon" (click)='hideShowPassword()'></ion-icon>
	</ion-item>

	<ion-grid>
		<ion-row>
			<ion-col size="6">
				<ion-button expand="block" color="tertiary" (click)="closeScreen('Save')">
					Save
				</ion-button>
			</ion-col>
			<ion-col size="6">
				<ion-button expand="block" color="tertiary" (click)="closeScreen('Cancel')">
					Cancel
				</ion-button>
			</ion-col>
		</ion-row>
	</ion-grid>
	
</ion-content>
