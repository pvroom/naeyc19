    <ion-toolbar>
       <ion-buttons slot="start">
        <ion-back-button></ion-back-button>
       </ion-buttons>
       <ion-title>Sponsors</ion-title>
       </ion-toolbar>

   <!-- Animated Searchbar -->
   </ion-header>

    <ion-content>
      <!-- Sponsor level headers-->
    
      <ion-card *ngFor="let sponsor of SponsorListing">
    
