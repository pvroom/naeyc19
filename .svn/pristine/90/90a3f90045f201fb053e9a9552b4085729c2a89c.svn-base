<ion-header>
	<ion-toolbar>
			<ion-buttons slot="start">
					<ion-back-button [defaultHref]="defaultHref"></ion-back-button>
				  </ion-buttons>
		<ion-title>Add a Profile Image</ion-title>
	</ion-toolbar>
</ion-header>


<ion-content class="ion-padding">

<!-- Posting picture attachment -->
<img width="100%" [src]="_DomSanitizer.bypassSecurityTrustUrl(ProfileImageAttachment)" onerror="this.src='assets/img/missing-image.png'">

<!-- Button controls -->
<ion-grid *ngIf=deviceButtons>
	<ion-row>
		<ion-col size="3">
            <ion-button color="tertiary" (click)="closePage('Cancel')">
              Cancel
            </ion-button>
		</ion-col>
		<ion-col size="3">
            <ion-button color="tertiary" (click)="addGalleryImage()">
				Gallery
            </ion-button>
		</ion-col>
		<ion-col size="3">
            <ion-button color="tertiary" (click)="addCameraImage()">
				Camera
            </ion-button>
		</ion-col>
		<ion-col size="3">
            <ion-button color="tertiary" (click)="closePage('Save')">
				Save
            </ion-button>
		</ion-col>
	</ion-row>
</ion-grid>



	<ion-grid *ngIf=browserButtons>
		<ion-row>
			<ion-col size="3">
				<ion-button color="tertiary" (click)="closePage('Cancel')">
				  Cancel
				</ion-button>
			</ion-col>
			<ion-col size="6">
				<p style="text-align:center;">Please use the mobile app to upload an image</p>
			</ion-col>
			<ion-col size="3">
				<!-- No save option needed -->
			</ion-col>
		</ion-row>
	</ion-grid>

</ion-content>
