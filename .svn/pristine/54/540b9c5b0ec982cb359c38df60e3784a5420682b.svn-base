<ion-header>
  <ion-toolbar>
     <ion-buttons slot="start">
      <ion-back-button></ion-back-button>
     </ion-buttons>
     <ion-title>Activity Feed Posting</ion-title>
     </ion-toolbar>
 </ion-header>

  <ion-content class="ion-padding">
  
      <!-- Posting picture attachment -->
      <img width="90%" [src]="_DomSanitizer.bypassSecurityTrustUrl(ActivityFeedAttachment)" onerror="this.src='assets/img/missing-image.png'">
  
  
      <!-- Button controls -->
      <ion-grid *ngIf=deviceButtons>
        <ion-row>
          <ion-col size="3">
            <ion-button color="tertiary" (click)="closeModal('Cancel')">
              Cancel
            </ion-button>
          </ion-col>
          <ion-col size="3">
            <ion-button color="tertiary" (click)="addGalleryImage()">
              Gallery
            </ion-button>
          </ion-col>
          <ion-col size="3">
            <ion-button color="tertiary" (click)="addCameraImage()">
              Camera
            </ion-button>
          </ion-col>
          <ion-col size="3">
            <ion-button color="tertiary" (click)="closeModal('Save')">
              Save
            </ion-button>
          </ion-col>
        </ion-row>
      </ion-grid>
  
      <ion-grid *ngIf=browserButtons>
        <ion-row>
          <ion-col size="3">
            <ion-button color="tertiary" (click)="closeModal('Cancel')">
              Cancel
            </ion-button>
          </ion-col>
          <ion-col size="6">
            <p style="text-align:center;">Please use the mobile app to upload an image</p>
          </ion-col>
          <ion-col size="3">
            <ion-button color="tertiary" (click)="closeModal('Save')">
              Save
            </ion-button>
          </ion-col>
        </ion-row>
      </ion-grid>
      
  </ion-content>
  
      <!-- Comment -->
  
  <ion-footer>
      <ion-toolbar>
      <ion-textarea autocomplete="true" autocorrect="on"
        (input)='CommentEntry = $event.target.value' 
        name="CommentEntry" 
        [value]="CommentEntry" 
        placeholder="Enter a comment..."
        style="height:50px;"></ion-textarea>
      </ion-toolbar>
    </ion-footer>