<ion-header>
	<ion-toolbar>
			<ion-buttons slot="start">
					<ion-back-button [defaultHref]="defaultHref"></ion-back-button>
				  </ion-buttons>
		<ion-title>Profile</ion-title>
	</ion-toolbar>
</ion-header>
  
<ion-content class="profilebg">

	<ion-grid>

		<!-- Avatar row to show when using a device; allows updating image -->
		<ion-row *ngIf=avatarDevice>
			<ion-col size="6" lines="none">
					<ion-avatar>
						<img [src]="_DomSanitizer.bypassSecurityTrustUrl(visualImageURL)" 
						(click)="UploadImage()" onerror="this.src='assets/img/missing-image.png'">
					</ion-avatar>
				
			</ion-col>

			<ion-col size="6">
				
					<ion-label style="color:#fff; font-size:14px; font-weight:600; margin-top:15px">
						Tap the image to change your profile picture</ion-label>
			
			</ion-col>
		</ion-row>
	</ion-grid>


	<ion-grid>
		<!-- Avatar row to show when using a browser; static image -->
		<ion-row *ngIf=avatarBrowser>
			<ion-col size="6">
				<ion-item>
					<ion-avatar>
						<img [src]="visualImageURL" onerror="this.src='assets/img/missing-image.png'">
					</ion-avatar>
				</ion-item>
			</ion-col>

			<ion-col size="6">
				<ion-item style=" margin-top:10%">
					<p class="ion-text-wrap" style="background:transparent;color:#fff;font-size:14px"></p>
				</ion-item>
			</ion-col>
		</ion-row>
	</ion-grid>

	<ion-grid>
		<ion-row>
			<ion-col>
				<p style="text-align:center;color:#fff; margin-top:15px">Edit information that other attendees see 
				when viewing your profile.<span *ngIf=avatarBrowser>&nbsp; Update your profile 
				image from your mobile device.</span></p>
			</ion-col>
		</ion-row>
		<ion-row style="margin-left:10px; margin-right:10px">
			<ion-col>
				<ion-item lines="none" style="color:#fff; padding-left:12px">{{prAttendeeName}}</ion-item>
			</ion-col>
		</ion-row>
		<ion-row style="margin-left:10px; margin-right:10px">
			<ion-col>
				<ion-item>
					<ion-input color="light" class="InputBoxW" type="text" placeholder="Job Title" (input)='prAttendeeTitle = $event.target.value' 
					name="prAttendeeTitle" [value]="prAttendeeTitle" id="prAttendeeTitle"></ion-input>
				</ion-item>
			</ion-col>
		</ion-row>
		<ion-row style="margin-left:10px; margin-right:10px">
			<ion-col>
				<ion-item>
					<ion-input color="light" class="InputBoxW" type="text" placeholder="Organization Name" (input)='prAttendeeOrganization = $event.target.value' 
					name="prAttendeeOrganization" [value]="prAttendeeOrganization" id="prAttendeeOrganization"></ion-input>
				</ion-item>
			</ion-col>
		</ion-row>
		<ion-row>
			<ion-col>
				<ion-grid>
					<ion-row>
						<ion-col>
							<ion-button expand="block" color="tertiary" (click)="SaveProfileChanges()">
								Save
							</ion-button>
						</ion-col>
						<ion-col>
							<ion-button expand="block" color="tertiary" (click)="ChangePassword()">
								Change Password
							</ion-button>
						</ion-col>
						<ion-col>
							<ion-button expand="block" color="tertiary" (click)="SignOut()">
								Sign Out
							</ion-button>
						</ion-col>
					</ion-row>
				</ion-grid>
			</ion-col>
		</ion-row>

		<ion-row>
			<ion-col size="1">
			</ion-col>
			<ion-col size="2">
				<ion-icon color="light" name="logo-twitter" (click)="EditSocialMediaLinks('statusTwitter')"></ion-icon>
			</ion-col>
			<ion-col size="2">
				<ion-icon color="light" name="logo-facebook" (click)="EditSocialMediaLinks('statusFacebook')"></ion-icon>
			</ion-col>
			<ion-col size="2">
				<ion-icon color="light" name="logo-linkedin" (click)="EditSocialMediaLinks('statusLinkedIn')"></ion-icon>
			</ion-col>
			<ion-col size="2">
				<ion-icon color="light" name="logo-instagram" (click)="EditSocialMediaLinks('statusInstagram')"></ion-icon>
			</ion-col>
			<ion-col size="2">
				<ion-icon color="light" name="logo-pinterest" (click)="EditSocialMediaLinks('statusPinterest')"></ion-icon>
			</ion-col>
		</ion-row>
	</ion-grid>
</ion-content>
