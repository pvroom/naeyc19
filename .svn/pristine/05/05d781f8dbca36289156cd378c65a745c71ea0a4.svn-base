<ion-header>
  <ion-toolbar>
     <ion-buttons slot="start">
      <ion-back-button></ion-back-button>
     </ion-buttons>
     <ion-title>Attendee Profile</ion-title>
     </ion-toolbar>
 </ion-header>
  
  <ion-content padding class="bg-style">
      <ion-grid>
          <ion-row>
            <ion-col>
            
               
                <ion-item no-lines style="background:transparent">
                    <ion-avatar class="center">
            <!--<img-loader [src]="visualImageURL" useImg [spinner]=false [fallbackAsPlaceholder]=true></img-loader>-->
            <img class="center" [src]="visualImageURL" src="assets/img/personIcon.png" onerror="this.src='assets/img/personIcon.png'">
                    </ion-avatar>
                  </ion-item>
            </ion-col>
      </ion-row>
          <ion-row>
              <ion-col>
          <ion-item no-lines style="background:transparent; color:#444">
            <p style="color:#fff;font-size:1.5em; text-align:center; font-weight:500">{{prAttendeeName}}</p>
            <p text-wrap style="color:#fff; font-size:1.25em; text-align:center">{{prAttendeeTitle}}</p>
            <p text-wrap style="color:#fff; font-size:1.25em; text-align:center">{{prAttendeeOrganization}}</p>
          </ion-item>
              </ion-col>
          </ion-row>
    </ion-grid>
    
  
  
  
            <!--
            <ion-row *ngIf="btnBookmarkManagement == false">
              <ion-col col-3>
              </ion-col>
              <ion-col col-4>
                <button ion-button block (click)="StartContinueConversation()">
                  Start a Conversation
                </button>
              </ion-col>
              <ion-col col-3>
              </ion-col>
            </ion-row>
            -->
  
          <ion-grid>
            <ion-row *ngIf="btnBookmarkManagement">
              <ion-col>
                <button ion-button color=secondary full (click)="StartContinueConversation(prAttendeeName, prConversationAttendeeID)">
                  Direct Chat
                </button>
              </ion-col>
          
              <ion-col>
                <button ion-button color=secondary full (click)="BookmarkManagement()">
                  {{visBookmarkAddRemoveButton}}
                </button>
              </ion-col>
            </ion-row>
  <!--
      <ion-col col-11>
        <p style="color:#fff;text-align:center">Tap an icon to view that social media profile</p>
      </ion-col>
  -->
          <ion-row>
              <ion-col col-1>
              </ion-col>
              <ion-col col-2 *ngIf=showTwitter>
                  <ion-icon style="color:#fff" name="logo-twitter" (tap)="viewSocialMedia(smURLTwitter)"></ion-icon>
              </ion-col>
              <ion-col col-2 *ngIf=showFacebook>
                  <ion-icon style="color:#fff" name="logo-facebook" (tap)="viewSocialMedia(smURLFacebook)"></ion-icon>
              </ion-col>
              <ion-col col-2 *ngIf=showLinkedIn>
                  <ion-icon style="color:#fff" name="logo-linkedin" (tap)="viewSocialMedia(smURLLinkedIn)"></ion-icon>
              </ion-col>
              <ion-col col-2 *ngIf=showInstagram>
                  <ion-icon style="color:#fff" name="logo-instagram" (tap)="viewSocialMedia(smURLInstagram)"></ion-icon>
              </ion-col>
              <ion-col col-2 *ngIf=showPinterest>
                  <ion-icon style="color:#fff" name="logo-pinterest" (tap)="viewSocialMedia(smURLPinterest)"></ion-icon>
              </ion-col>
          </ion-row>
        </ion-grid>
  </ion-content>
  