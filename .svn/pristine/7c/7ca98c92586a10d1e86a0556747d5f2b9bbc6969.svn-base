<ion-header>
    <ion-toolbar>
       <ion-buttons slot="start">
       <ion-back-button></ion-back-button>
       </ion-buttons>
       <ion-title>Personal Agenda</ion-title>
       </ion-toolbar>
   </ion-header>


  
  <ion-content>
  
  
  <ion-card>
      <ion-card-content>
  
    <ion-list>
        <ion-card-header style="background:#004c94;color:#fff">
            Event Title
          </ion-card-header>
  
      <ion-item>
        <ion-input type="text" placeholder="Enter personal event title" (input)='agendaItempersonalEventName = $event.target.value' name="agendaItempersonalEventName" [value]="agendaItempersonalEventName" id="agendaItempersonalEventName"></ion-input>
      </ion-item>
  
      <ion-card-header style="background:#004c94;color:#fff">
          Location
        </ion-card-header>
              
      <ion-item>
        <ion-input type="text" placeholder="Enter a location" (input)='agendaItempersonalEventLocation = $event.target.value' name="agendaItempersonalEventLocation" [value]="agendaItempersonalEventLocation" id="agendaItempersonalEventLocation"></ion-input>
      </ion-item>
  
      <ion-card-header style="background:#004c94;color:#fff">
          Date and Time of the Event
        </ion-card-header>
  
      <div>
  
        <ion-grid>
          <ion-row>
            <ion-col>     
              <p>Date</p>
              <ion-item>
                <ion-datetime 
                  displayFormat="MM/DD/YYYY" 
                  min="2019-06-01" 
                  max="2019-06-05" 
                  name="agendaItempersonalDate" 
                  [(ngModel)]="agendaItempersonalDate" 
                  id="agendaItempersonalDate"></ion-datetime>
              </ion-item>
            </ion-col>
  
            <ion-col>                 
              <p>Start Time</p>
              <ion-item>
                <ion-datetime 
                  displayFormat="HH:mm" 
                  min="07:00" 
                  max="23:30" 
                  name="agendaItempersonalStartTime" 
                  [(ngModel)]="agendaItempersonalStartTime" 
                  id="agendaItempersonalStartTime"></ion-datetime>
              </ion-item>
            </ion-col>
  
            <ion-col>
              <p>End Time</p>
              <ion-item>
                <ion-datetime 
                  displayFormat="HH:mm" 
                  min="07:00" 
                  max="23:30" 
                  name="agendaItempersonalEndTime" 
                  [(ngModel)]="agendaItempersonalEndTime" 
                  id="agendaItempersonalEndTime"></ion-datetime>
              </ion-item>
            </ion-col>
          </ion-row>
        </ion-grid>
  
        <ion-card-header style="background:#004c94;color:#fff">
          Description
        </ion-card-header>
  
        <ion-grid>
          <ion-row>
            <ion-col size="12">
              <ion-textarea autocomplete="true" autocorrect="on" placeholder="Enter description or notes about this personal event" 
              (input)='agendaItempersonalEventDescription = $event.target.value' 
                name="agendaItempersonalEventDescription" 
                [value]="agendaItempersonalEventDescription" 
                id="agendaItempersonalEventDescription"></ion-textarea>
            </ion-col>
          </ion-row>
        </ion-grid>
  
        <ion-grid>
          <ion-row>
            <ion-col size="6">
              <ion-button block style="background:#004c94; color:#fff" (click)="SaveAgendaItem()">
                Save
              </ion-button>
            </ion-col>
            <ion-col size="6">
              <ion-button block style="background:#004c94; color:#fff" *ngIf="btnDelete" (click)="DeleteAgendaItem(agendaItemid)">
                Delete
              </ion-button>
            </ion-col>
          </ion-row>
        </ion-grid>
  
      </div>
      
    </ion-list>
  </ion-card-content>
  </ion-card>
  
  </ion-content>
  
  
  