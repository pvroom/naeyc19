			});

		}
		
	}
	
    EventDetails(EventID) {
		
        if (EventID != 0) {
            // Navigate to Education Details page
			this.localstorage.setLocalValue('EventID', EventID);
			this.navCtrl.navigateForward('/educationdetails/' + EventID);
        }

